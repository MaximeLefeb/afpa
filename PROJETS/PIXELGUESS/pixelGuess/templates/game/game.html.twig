{% extends 'base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('assets/css/game.css')}}">{% endblock %}
{% block title %}PixelGuess - {{type}}{% endblock %}

{% block body %}
    <input id="type" type="hidden" value="{{type}}"/>

    <div class="container-fluid">
        <div class="row">
            <div id="players" class="col-2">
                <p class="text-center py-4">Players</p>
            </div>


            <div id="game-block" class="col-10 text-center py-5">
                <div id="timer" class="mt-3"></div>
                <img id="img-game" data-id="{{guess.id}}" src="{{ asset(guess.img) }}" alt="Image placeholder block">
                <input type="text" name="response" id="response" class="mt-3 text-center" placeholder="Guess">
                <div id="response" class="d-none">La réponse était : {{ guess.keyword }}</div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/js/game.js')}}"></script>
{% endblock %}