{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <h1 class="my-3">Article index</h1>

                <div class="row px-5">
                    {% for article in articles %}
                        <div class="col-2">
                            <div class="card shadow-sm rounded-5 mb-5">
                                <div class="card-header">
                                    <b>{{ article.name }}</b>
                                </div>

                                <div class="card-body px-3 py-3">
                                    <div class="text-center mb-2">
                                        <img class="rounded" src="https://picsum.photos/200"/>
                                    </div>

                                    {{ article.description }}

                                    <hr/>

                                    <div class="row my-2">
                                        <div clas="col-6">
                                            <div class="row">
                                                <div clas="col-6">
                                                    <b>Stock</b> : {{ article.quantity }}
                                                </div>

                                                <div clas="col-6">
                                                    <b>Note</b> :

                                                    {% for i in 1..article.note %}
                                                        <img width="16" src="{{asset('assets/img/star.png')}}" width="250"/>
                                                    {% endfor %}
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-3 text-end">
                                        <a class="d-inline btn btn-secondary" href="{{ path('app_article_show', {'id': article.id}) }}">View</a>
                                        <a class="d-inline btn btn-primary" href="{{ path('app_article_edit', {'id': article.id}) }}">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="fs-5 text-danger px-5 mb-5">
                            no records found
                        </div>
                    {% endfor %}
                </div>

                <div class="text-end">
                    <a class="btn btn-primary" href="{{ path('app_article_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}