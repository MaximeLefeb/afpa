{% extends 'base.html.twig' %}

{% block title %}Mon premier symfony !{% endblock %}

{% block body %}
    <style>
        .example-wrapper { 
            font: 18px/1.5 sans-serif; 
        }
        .example-wrapper code { 
            background: #F5F5F5; 
            padding: 2px 6px; 
        }
        .container { 
            height : 100vh;
            -webkit-box-shadow: 2px 0px 21px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 2px 0px 21px 0px rgba(0,0,0,0.75);
            box-shadow: 2px 0px 21px 0px rgba(0,0,0,0.75);
        }
    </style>

    <div class="row text-center">
        <div class="col-sm-4"></div>
        <div class="col-sm-4">
            {{ form_start(form) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.designation) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.prix) }}
                </div>
            {{ form_end(form) }}
        </div>
        <div class="col-sm-4"></div>
    </div>
{% endblock %}