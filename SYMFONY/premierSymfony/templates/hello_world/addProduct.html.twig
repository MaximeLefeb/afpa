{% extends 'base.html.twig' %}

{% block title %}Mon premier symfony !{% endblock %}

{% block body %}
    <style>
        .example-wrapper { 
            font: 18px/1.5 sans-serif; 
        }
        .example-wrapper code { 
            background: #F5F5F5; 
            padding: 2px 6px; 
        }
        .container { 
            height : 100vh;
            -webkit-box-shadow: 2px 0px 21px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 2px 0px 21px 0px rgba(0,0,0,0.75);
            box-shadow: 2px 0px 21px 0px rgba(0,0,0,0.75);
        }
    </style>

    <div class="container">
        <div class="example-wrapper row">
            <div class="col-12 text-center">
                <h1>Salut {{ monNom }}</h1>
                <hr>
                <div class="row">
                    <div class="col-4"></div>
                    <div class="col-4">
                        <form>
                            <div class="form-group">
                                <label for="formGroupExampleInput">Type d'article</label>
                                <select class="form-control form-control-lg">
                                    <option selected></option>
                                    <option>Électro-ménager</option>
                                    <option>Alimentaire</option>
                                    <option>Jeux vidéos</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <label for="formGroupExampleInput2">Nom de l'article</label>
                                <input type="text" class="form-control" id="articleName">
                            </div>
                            <button type="submit" class="btn btn-primary mb-2">Valider</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
