{% extends 'base.html.twig' %}

{% block title %}Mon premier symfony !{% endblock %}

{% block body %}
    <style>
        .example-wrapper { 
            font: 18px/1.5 sans-serif; 
        }
        .example-wrapper code { 
            background: #F5F5F5; 
            padding: 2px 6px; 
        }
        .container { 
            height : 100vh;
            -webkit-box-shadow: 2px 0px 21px 0px rgba(0,0,0,0.75);
            -moz-box-shadow: 2px 0px 21px 0px rgba(0,0,0,0.75);
            box-shadow: 2px 0px 21px 0px rgba(0,0,0,0.75);
        }
    </style>
    
    <div class="example-wrapper row">
        <div class="col-12 text-center">

            {% if error is defined  %}
                <div class="alert alert-danger" role="alert">{{error}}</div>
            {% endif %}

            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>Numéro de produit</th>
                        <th>Nom de produit</th>
                        <th>Prix (€)</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                
                <tbody>
                    {% for product in Products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>{{ product.designation }}</td>
                            <td>{{ product.prix }}</td>
                            <td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="btn btn-primary" href="{{ path('modifyProduct',{'id': product.id}) }}">Modifier</a>
                                {% endif %}
                            </td>
                            <td>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <form method="post" action="{{ path('delProduct',{'id': product.id}) }}" onsubmit="return confirm('Êtes vous sûr de vouloir supprimer ce produit ?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                        <button class="btn btn-danger">Supprimer</button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}   
                </tbody>
            </table>
            <a class="btn btn-primary" href="http://localhost:8000/login">Se connecter</a>
            <a class="btn btn-primary" href="http://localhost:8000/addProduct">Ajouter un produit</a>
        </div>
    </div>
{% endblock %}
